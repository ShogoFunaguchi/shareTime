<div class="card-panel login">

<div class="card-panel login_title">
    <h2>ー　ログイン　ー</h2>
</div>

<div class="row">

<% flash.each do |key,value| %>
  <div class = "card-panel <%= key %>"><%= value %></div>
<% end %>

  <%= form_for(:session,url: login_user_path)  do |f| %>


    <%= f.label "名前", class:'form' %>
    <p><%= @user_name %></p>
    <%= f.hidden_field :name,:value =>  @user_name %>

    <%= f.label "パスワード",class:'form' %>
    <%= f.password_field :password %>

    <%= f.submit "確認", class:"btn form-btn" %>


  <% end %>
</div>
</div>