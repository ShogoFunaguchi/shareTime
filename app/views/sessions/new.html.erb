<div class="card-panel login">

<div class="card-panel login_title">
    <h2>ー　ログイン　ー</h2>
</div>

<div class="row">

<% flash.each do |key,value| %>
  <div class = "card-panel <%= key %>"><%= value %></div>
<% end %>

  <%= form_for(:session,url:login_path)  do |f| %>


    <%= f.label "チーム名", class:'form' %>
    <%= f.text_field :name, placeholder:"projects-name" %>

    <%= f.label "パスワード",class:'form' %>
    <%= f.password_field :password %>

    <div class="remember_me">
    <%= f.check_box :remember_me , class:"filled-in"%><%= f.label :remember_me, "ログイン情報を記録する" %>
    </div>


    <%= f.submit "ログイン", class:"btn form-btn" %>


  <% end %>
</div>
</div>